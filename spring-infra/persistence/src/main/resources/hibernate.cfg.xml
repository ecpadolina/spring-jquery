<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
    "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
  <session-factory>
    <property name="dialect">${db.dialect}</property>
    <property name="connection.driver_class">${db.driver}</property>
    <property name="show_sql">true</property>
    <property name="net.sf.ehcache.configurationResourceName">ehcache.xml</property>
    <property name="hibernate.cache.region.factory_class">org.hibernate.cache.ehcache.SingletonEhCacheRegionFactory</property>
    <property name="hibernate.cache.use_second_level_cache">true</property>
    <property name="hibernate.cache.use_query_cache">true</property>
    <property name="hibernate.cache.provider_class">org.hibernate.cache.EhCacheProvider</property>

    <mapping class="ecp.spring.model.Person"/>
    <mapping class="ecp.spring.model.ContactInfo"/>
    <mapping class="ecp.spring.model.Role"/>
    <mapping class="ecp.spring.model.Project"/>
    <mapping class="ecp.spring.model.Users"/>
    <mapping class="ecp.spring.model.Tickets"/>
  </session-factory>
</hibernate-configuration>

